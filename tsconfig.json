{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["es2018", "dom"],
		"module": "es2020",
		"moduleResolution": "node",
		"outDir": "./dist",
		"strict": true,
		"strictNullChecks": false,
		"target": "es5"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
